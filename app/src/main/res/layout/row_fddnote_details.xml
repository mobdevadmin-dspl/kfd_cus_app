<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_layout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="21.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/row_refname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RefName"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blueColor"
            android:textSize="16dp"
            android:maxLines="2"
            android:layout_weight="10.0"
            app:layout_constraintEnd_toStartOf="@+id/row_refno"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/row_refno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="RefNo"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blueColor"
            android:textSize="@dimen/customer_listview_text_size2"
            android:layout_weight="3.0"
            app:layout_constraintEnd_toStartOf="@+id/row_txndate"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/row_refname"
            app:layout_constraintTop_toTopOf="parent" />

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/row_txndate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2"
            android:layout_weight="2.5"
            app:layout_constraintEnd_toStartOf="@+id/row_Amt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/row_refno"
            app:layout_constraintTop_toTopOf="parent" />

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/row_dueAmt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Due amt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2"
            android:layout_weight="2.5"
            app:layout_constraintEnd_toStartOf="@+id/days"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/row_Amt"
            app:layout_constraintTop_toTopOf="parent" />

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/row_Amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Amt"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2"
            android:layout_weight="2.5"
            app:layout_constraintEnd_toStartOf="@+id/row_dueAmt"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/row_txndate"
            app:layout_constraintTop_toTopOf="parent" />

        <com.datamation.kfdsfa.utils.CustomFont
            android:id="@+id/days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Age"
            android:layout_weight="1.0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/greenColor"
            android:textSize="@dimen/customer_listview_text_size2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/row_dueAmt"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>